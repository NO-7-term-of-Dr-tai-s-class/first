<wxs src="../../wxs/utils.wxs" module="myutil" />
<view class='content'>
  <view class='nav'>
    <view class='top'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <view class='nickname'>
      <open-data type="userNickName"></open-data> 
    </view>
  </view>
    <view class='item'>
     <text class='left'>姓名：</text><input class="informinput" bindinput="et_input_inputuname" placeholder="请输入姓名" value="{{list.uname}}">
     </input>
    </view>

    <view class='item'>
     <text class='left'>性别：</text><input class="informinput" bindinput="et_input_inputusex" placeholder="请输入性别" value="{{list.usex}}">
     </input>
    </view>

    <view class='item'>
     <text class='left'>电话：</text><input class="informinput" type="number" bindinput="et_input_inputtel" placeholder="请输入电话"  value="{{list.utel}}">
     </input>
    </view>

    <view class='item'>
     <text class='left'>年龄：</text><input class="informinput" type="number" bindinput="et_input_inputage" placeholder="请输入年龄"  value="{{list.uage}}">
     </input>
    </view>
    
    <view class='item' bindtap='resetpwd'>
     <text class='left'>密码：</text><input class="informinput" type="number"  bindinput="et_input_inputupwd" placeholder="请输入密码"  value="{{list.upwd}}">
     </input>
    </view>

     <view class='inform-btn'>
        <button class="vote-btn" type="primary" bindtap='upUserInfoBtn' >确定</button>
      </view>
  
</view>






